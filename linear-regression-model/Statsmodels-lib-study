    "# Ã–rnek veri seti\n",
    "data = {'X1': [1, 2, 3, 4, 5], 'X2': [2, 4, 5, 3, 4], 'Y': [0, 0, 1, 1, 1]}\n",
    "df = pd.DataFrame(data)\n",
    "\n",
    "# BaÄŸÄ±msÄ±z deÄŸiÅŸkenler (X1, X2) ve baÄŸÄ±mlÄ± deÄŸiÅŸken (Y)\n",
    "X = df[['X1', 'X2']]\n",
    "Y = df['Y']\n",
    "\n",
    "# Sabit terimi ekleme\n",
    "X = sm.add_constant(X)\n",
    "\n",
    "# Lojistik regresyon modeli oluÅŸturma ve fit etme\n",
    "model = sm.Logit(Y, X)\n",
    "results = model.fit()\n",
    "\n",
    "# Model sonuÃ§larÄ±nÄ± Ã¶zetleme\n",
    "#print(results.summary())\n"
